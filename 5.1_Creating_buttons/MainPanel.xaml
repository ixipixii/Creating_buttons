<Window x:Class="Creating_buttons.MainPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Creating_buttons"
             mc:Ignorable="d" 
             Height="170" Width="300"
        x:Name="VM">
    <StackPanel>
        <Label Content="Выберите нужное действие"
               Margin="5 5 5 5"></Label>
        <Button x:Name="CountPipe"
                Content="Количество труб"
                Click="SelectCountPipe"
                Margin="5 5 5 5"></Button>
        <Button x:Name="VolumeWall"
                Click="SelectVolumeWall"
                Content="Объём стен"
                Margin="5 5 5 5"></Button>
        <Button Content="Количество дверей"
                x:Name="CountDoors"
                Click="SelectCountDoors"
                Margin="5 5 5 5"></Button>
    </StackPanel>
</Window>
